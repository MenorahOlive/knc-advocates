---
import Image from "astro/components/Image.astro";
import background from "#assets/images/hero-background.jpg";
import logo from "#assets/icons/logo.svg";
import scales from "#assets/icons/scales.svg";
---

<section class="overflow-hidden">
  <div class="relative grid place-content-center text-primary pt-64">
    <div class="w-full h-full absolute top-0 left-0 brightness-75 -z-10">
      <Image
        src={background}
        alt="Nairobi Skyline"
        class="w-full h-full object-cover"
      />
    </div>

    <div
      class="grid md:grid-cols-2 w-full lg:w-1/2 mx-auto gap-10 px-5 sm:px-10 pb-[35vh]"
    >
      <!-- Logo -->
      <div class="my-auto overflow-hidden">
        <Image src={logo} alt="logo" class="w-full animate-slide-in-left" />
      </div>

      <!-- Text -->
      <h1
        class="uppercase font-lemonmilk text-5xl md:text-7xl border-r-8 md:border-r-0 md:border-l-8 text-right md:text-left px-7 animate-slide-in-right"
        style="line-height: 130%;"
      >
        Your trusted legal partner
      </h1>
    </div>
  </div>
</section>

<style>
  /* Keyframes for sliding in from the center to the left */
  @keyframes slide-in-left {
    0% {
      transform: translateX(-100%);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Keyframes for sliding in from the center to the right */
  @keyframes slide-in-right {
    0% {
      transform: translateX(100%);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Apply animations to the logo and text */
  .animate-slide-in-left {
    animation: slide-in-left 2s ease-out forwards;
  }

  .animate-slide-in-right {
    animation: slide-in-right 2s ease-out forwards;
  }

  /* Clip-path for the container */
  @media (min-width: 768px) {
    .clipped-container {
      clip-path: polygon(0 0, 100% 0, 100% 80%, 90% 100%, 0 100%);
    }
  }

  /* For better browser compatibility */
  @supports not (clip-path: polygon(0 0)) {
    .clipped-container {
      -webkit-clip-path: polygon(0 0, 100% 0, 100% 90%, 90% 100%, 0 100%);
    }
  }
</style>
