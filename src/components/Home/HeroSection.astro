---
import Image from "astro/components/Image.astro";
import background from "#assets/images/hero-background.jpg";
import logo from "#assets/icons/logo.svg";
import scales from "#assets/icons/scales.svg";
---

<section>
  <div class="relative grid place-content-center text-primary pt-64">
    <div class="w-full h-full absolute top-0 left-0 brightness-75 -z-10">
      <Image
        src={background}
        alt="Nairobi Skyline"
        class="w-full h-full object-cover"
      />
    </div>

    <div
      class="grid md:grid-cols-2 w-full lg:w-1/2 mx-auto gap-10 px-5 sm:px-10 pb-[35vh]"
    >
      <Image src={logo} alt="logo" class="w-full my-auto" />
      <h1
        class="uppercase font-lemonmilk text-5xl md:text-7xl border-r-8 md:border-r-0 md:border-l-8 text-right md:text-left px-7"
      >
        Your trusted legal partner in kenya
      </h1>
    </div>
  </div>
  <div class="relative">
    <div
      class="bg-secondary text-primary px-10 py-16 flex flex-col md:flex-row-reverse gap-16 items-center justify-center text-center md:text-left uppercase font-medium font-lemonmilk md:w-2/3 mx-auto relative -bottom-[50%] max-w-screen-md clipped-container aspect-video transform md:-translate-y-[20%]"
    >
      <Image src={scales} alt="scales" aria-hidden="true" class="max-w-28" />

      <div class="flex flex-col gap-10">
        <h2 class="text-3xl 2xl:text-4xl">Empowering justice</h2>
        <h3 class="text-5xl 2xl:text-6xl flex flex-col items-start gap-5">
          <span>One</span>
          <span>Client at</span>
          <span>a time</span>
        </h3>
      </div>
    </div>
  </div>
</section>

<style>
  @media (min-width: 768px) {
    .clipped-container {
      clip-path: polygon(
        0 0,
        /* Top left */ 100% 0,
        /* Top right */ 100% 80%,
        /* Right side 90% down */ 90% 100%,
        /* Bottom 90% from left */ 0 100% /* Bottom left */
      );
    }
  }

  /* For better browser compatibility */
  @supports not (clip-path: polygon(0 0)) {
    .clipped-container {
      -webkit-clip-path: polygon(0 0, 100% 0, 100% 90%, 90% 100%, 0 100%);
    }
  }
</style>
