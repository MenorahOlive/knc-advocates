---
import Image from "astro/components/Image.astro";
import LinkedinIcon from "#assets/icons/linkedin-yellow.svg";
import MailIcon from "#assets/icons/mail-yellow.svg";
import PhoneIcon from "#assets/icons/phone-yellow.svg";

interface Props {
  name: string;
  image: {
    src: any;
    alt: string;
  };
  linkedIn: string;
  email: string;
  phoneNumber: string;
}
const { name, image, linkedIn, email, phoneNumber } = Astro.props;
---

<li class="h-[500px] relative overflow-hidden group">
  <Image
    src={image.src}
    alt={image.alt}
    width={128}
    height={128}
    class="w-full h-full object-cover aspect-video object-center group-hover:scale-105 transition-transform duration-1000"
  />

  <h4
    class="w-full absolute bottom-0 backdrop-blur-lg bg-secondary/30 text-primary text-center text-xl uppercase font-lemonmilk py-5 transform translate-y-[100%] group-hover:translate-y-0 transition-transform duration-300"
  >
    {name}
    <div
      class="flex pt-5 flex-row gap-5 content-center items-center justify-center"
    >
      <a href={linkedIn}
        ><Image
          src={LinkedinIcon}
          alt="linkedin icon"
          class="w-6 hover:scale-105"
        /></a
      >
      <a href={email}
        ><Image src={MailIcon} alt="mail icon" class="w-6 hover:scale-105" /></a
      >
      <a href={phoneNumber}
        ><Image
          src={PhoneIcon}
          alt="phone icon"
          class="w-6 hover:scale-105"
        /></a
      >
    </div>
  </h4>
</li>
